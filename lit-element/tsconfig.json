{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "lib": [
      "dom",
      "ES2018"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "node"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}